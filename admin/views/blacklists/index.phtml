<div class="content">
    <input type="button" id="add_button" value="CREATE NEW BLACKLIST">

    <table id="blacklist_table" class="display" >
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th style="width:80px;">Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
